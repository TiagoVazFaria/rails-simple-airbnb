<h1>All my Flats (<%= @flats.length %>)</h1>

<div class="d-flex flex-wrap">
  <% @flats.each do |flat| %>
    <div class="card m-3 shadow rounded" style="width: 18rem; ">
    <%= image_tag flat.img_url, class: 'card-img-top' %>
      <div class="card-body">
        <p class="font-weight-bold mb-1"><%= flat.name %> </p>
        <p id="address" class="my-1"><%= flat.address%></p>
        <p id="price_guests" class="mt-3 mb-0">ðŸ‘¥ <%= flat.number_of_guests%> ðŸ’° <%= flat.price_per_night%></p>
      </div>
      <div class="card-footer">
        <p class="mb-0">
          <%= link_to "More info", flat, class: "text-primary" %>
          <%= link_to "Edit", edit_flat_path(flat.id), class: "text-warning px-3" %>
          <%= link_to "Remove", flat, method: :delete, class: "text-danger" %>
        </p>
      </div>
    </div>
  <% end %>
</div>


